<p id="notice"><%= notice %></p>

<h1>Listing Wikis</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr id="<%= dom_id(wiki) %>">
        <td><%= wiki.title %></td>
        <td><%= wiki.body %></td>
        <td><%= wiki.private %></td>
        <% if current_user.role == 'admin' %>
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
        <% end %>
        <td><%= link_to 'Show', wiki %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki', new_wiki_path %>
<%= link_to 'List Wikis User', list_wikis_path %>
<%= link_to 'Upgrade to premium account', new_charge_path %>

