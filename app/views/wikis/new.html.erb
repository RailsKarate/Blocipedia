<h1>Create A New Wiki</h1>


   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body %>
       </div>

       <% if current_user.role == 'admin' || current_user.role == 'premium'%>
          <div class="form-group">
            <%= f.label :Private %>
            <%= f.check_box :isprivate %>
          </div>
        <% end %>

       <div class="form-group">
         <%= f.submit "Save" %>
       </div>
      
        
     <% end %>
   </div>
 </div>
