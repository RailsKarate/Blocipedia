<h1>Create A New Wiki</h1>


   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= markdown f.text_field :title %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= markdown f.text_area :body %>
       </div>
       <div class="form-group">
         <%= f.submit "Save" %>
       </div>
      <% unless current_user.role == 'standard' %>
          <div class="form-group">
            <%= f.check_box :isprivate, {}, true, false %> Private wiki
          </div>
        <% end %>
        
     <% end %>
   </div>
 </div>
